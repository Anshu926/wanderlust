<% layout("/layouts/boilerplate") %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-7 col-lg-6">

      <h2 class="text-center mb-4 fw-semibold">Create Listings</h2>

      <div class="card shadow-lg border-0 p-4 rounded-4">

        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label fw-semibold">Title</label>
            <input
              name="listing[title]"
              placeholder="Add a catchy title"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="valid-feedback">Title looks good!</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label fw-semibold">Description</label>
            <input
              name="listing[description]"
              placeholder="Add some description"
              type="text"
              class="form-control form-control-lg"
              required
            />
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label fw-semibold">Price</label>
            <input
              name="listing[price]"
              placeholder="Enter price in â‚¹..."
              type="number"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Please enter a valid price!</div>
          </div>

          <!-- Image Upload -->
          <div class="mb-3">
            <label for="image" class="form-label fw-semibold">Upload Image</label>
            <input
              name="listing[image]"
              type="file"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Please upload an image!</div>
          </div>

          <!-- Location -->
          <div class="mb-3">
            <label for="location" class="form-label fw-semibold">Location</label>
            <input
              name="listing[location]"
              placeholder="Current location"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Please enter a location!</div>
          </div>

          <!-- Country -->
          <div class="mb-3">
            <label for="country" class="form-label fw-semibold">Country</label>
            <input
              name="listing[country]"
              placeholder="Your country"
              type="text"
              class="form-control form-control-lg"
              required
            />
            <div class="invalid-feedback">Please enter a country!</div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-dark btn-lg rounded-3 add-btn">
              ADD
              <i class="fa-solid fa-plus ms-2"></i>
            </button>
          </div>

        </form>

      </div>

    </div>
  </div>
</div>
